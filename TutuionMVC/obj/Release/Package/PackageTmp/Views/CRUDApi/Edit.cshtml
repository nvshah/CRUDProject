                                <a href="javascript:;" name="guj">Guj</a>
                            </div>
                        </div>*@
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="container-contact100-form-btn">
                    <button type="button" class="contact100-form-btn" id="updateBtn">
                        <span>
                            <i class="fa fa-paper-plane-o m-r-6" aria-hidden="true"></i>
                            Update
                        </span>
                    </button>
                    &nbsp;&nbsp;
                    <button type="button" class="contact100-form-btn" id="cancelBtn">
                        <span>
                            <i class="fa fa-paper-plane-o m-r-6" aria-hidden="true"></i>
                            Cancel
                        </span>
                    </button>
                </div>
                <div>
                    @*@Html.ActionLink("Back to List", "Index1", "CRUDApi")*@
