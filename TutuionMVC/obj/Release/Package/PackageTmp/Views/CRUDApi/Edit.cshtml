    <div class="container-contact100">

        <div class="wrap-contact100">
            <form class="contact100-form validate-form" action="javascript:void(o)">
                <span class="contact100-form-title">
                    Student   Details
                </span>

                <div>
                    <div class="wrap-input100 validate-input" style="display:none">
                        <input id="input_id" class="input100" type="text" name="name" placeholder="Name" value="@Model.Student_ID">
                    </div>
                </div>

                <div class="label-value">
                    <label>Name :</label>
                    <div class="wrap-input100 validate-input" data-validate="Enter Your Name">
                        <input id="input_name" class="input100" type="text" name="name" placeholder="Name" value="@Model.Name">
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="label-value">
                    <label>Standard : </label>
                    <div class="wrap-input100 validate-input" data-validate="Enter Your Standard">
                        <input id="input_standard" class="input100" type="text" name="standard" placeholder="Standard" value="@Model.Standard" readonly>
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="label-value">
                    <label>Phone : </label>
                    <div class="wrap-input100 validate-input" data-validate="Please enter your phone">
                        <input id="input_phone" class="input100" type="text" name="phone" placeholder="Phone" value="@Model.Phone">
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="label-value">
                    <label>Dob : </label>
                    <div class="wrap-input100 validate-input" data-validate="please enter your date of birth">
                        <input id="input_dob" class="input100" type="text" name="dob" placeholder="Dob" value="@Html.DisplayFor(m => m.Dob)">
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="label-value">
                    <label>Year : </label>
                    <div class="wrap-input100 validate-input" data-validate="please enter year of Addmission">
                        <input id="input_year" class="input100" type="text" name="year" placeholder="Year of Addmission" value="@Model.Year" readonly>
                        <span class="focus-input100"></span>
                    </div>
                </div>

                <div class="label-value">
                    <label>Medium : </label>
                    <div class="wrap-input100 validate-input" data-validate="Please enter your Medium">
                        @*<div class="dropdown">*@
                        <input id="input_medium" class="input100" type="text" name="medium" placeholder="Medium" value="@Model.Medium" readonly>
                            @*<div class="dropdown-content">
