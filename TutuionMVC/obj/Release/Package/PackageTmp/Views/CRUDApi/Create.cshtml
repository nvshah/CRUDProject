    <script>
        $(function () {
            $("#input_dob").datepicker({
                format: 'dd-mm-yyyy'
            });

            $("#input_year").datepicker({
                format: "yyyy",
                viewMode: "years",
                minViewMode: "years",
                setDate : new Date().getFullYear().toString()
            });

        });
        //$('.BtoL').on('click', function () {
        //    window.location.href = "/CRUDApi/Index1?std=" + $('#input_standard').val();
        //});
        $('.dropdown-content a').on('click', function () {
            let value = $(this).html();
            $('.dropdown input').val(value);
        })
    </script>
