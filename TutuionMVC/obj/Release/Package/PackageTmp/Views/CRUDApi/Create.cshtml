    <style>
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width:50%;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            /*background: #fff;*/
            border-radius: 10px;
            font-family: Ubuntu-Bold;
            font-size: 12px;
            color: #8f8fa1;
            line-height: 1.2;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        /*.dropdown {
            position: relative;
            display: inline-block;
        }*/
        


    </style>
